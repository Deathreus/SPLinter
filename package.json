{
	"name": "sp-linter",
	"displayName": "SourcePawn Linter",
	"description": "",
	"version": "1.0.0",
	"icon": "images/pawn.png",
	"license": "GPLv3",
	"publisher": "deathreus",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:sourcepawn"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration":{
			"title": "SourcePawn Linter",
			"properties": {
				"sourcePawnLinter.includeDir": {
					"type": "string",
					"description": "Location of required includes to compile"
				}
			}
		}
	},
	"repository": {
        "type": "git",
        "url": "https://github.com/Deathreus/SPLinter.git"
    },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"glob": "^7.1.6",
		"typescript": "^4.1.3",
		"vsce": "^1.85.1"
	}
}
