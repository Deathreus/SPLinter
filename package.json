{
	"name": "sp-linter",
	"displayName": "SourcePawn Linter",
	"description": "A simple linter",
	"version": "0.0.1",
	"icon": "images/pawn.png",
	"license": "GPLv3",
	"publisher": "deathreus",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:sourcepawn"
	],
	"main": "./extension",
	"contributes": {
		"configuration": {
			"title": "SourcePawn Linter",
			"properties": {
				"sourcePawnLinter.includeDir": {
					"type": "string",
					"description": "Location of required includes to compile"
				}
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Deathreus/SPLinter.git"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./test/runTest.js",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"@types/mocha": "^8.0.4",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vsce": "^1.85.1",
		"vscode-test": "^1.5.0"
	}
}
